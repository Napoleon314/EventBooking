<% content_for :title do %>
  Sign in to EventsBooking
<% end %>

<%= bootstrap_form_for(:session, url: signin_path) do |f| %>
  <fieldset>
    <div id="legend">
      <legend class="">Sign in to EventsBooking</legend>
    </div>
    <% if flash[:error] %>
      <p style="color:#ff0000"><%= flash[:error] %></p>
    <% end %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.submit "Sign in", class: 'btn btn-primary' %>
  </fieldset>
<% end %>